<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#00000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/cardTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="SimkoPay"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#454545"
            android:textStyle="bold" />

        <View
            android:layout_width="35dp"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            android:background="#ED2626" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cardListView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#715B5B"
            android:overScrollMode="never" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/cardNotFound"
            android:visibility="gone">


            <TextView
                android:id="@+id/mypesanTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rekening Tabungan"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tidak Ditemukan"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#E53D0C"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Lihat Semua &gt;"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4CCC14"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

